{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "CorsOptions": {
      "AllowedOrigins": ["http://localhost:3000", "http://localhost:7777"]
  },
  "ReverseProxy": {
    "Routes": {
      "login-route" : {
        "ClusterId": "identity-api",
        "CorsPolicy": "default",
        "Match": {
          "Path": "/api/auth/login"
        }
      },
      "refresh-route" : {
        "ClusterId": "identity-api",
        "CorsPolicy": "default",
        "Match": {
          "Path": "/api/auth/refresh"
        }
      },
      "reset-password-route" : {
        "ClusterId": "identity-api",
        "CorsPolicy": "default",
        "Match": {
          "Path": "/api/auth/reset-password"
        }
      },
      "reset-password-confirm-route" : {
        "ClusterId": "identity-api",
        "CorsPolicy": "default",
        "Match": {
          "Path": "/api/auth/reset-password-confirm"
        }
      },
      "auth-route" : {
        "ClusterId": "identity-api",
        "CorsPolicy": "default",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "users-route": {
        "ClusterId": "identity-api",
        "CorsPolicy": "default",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/users/{**catch-all}"
        }
      },
      "roles-route": {
        "ClusterId": "identity-api",
        "CorsPolicy": "default",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/roles/{**catch-all}"
        }
      },
      "profile-route": {
        "ClusterId": "employees-api",
        "CorsPolicy": "default",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/profile/{**catch-all}"
        }
      },
      "employees-route": {
        "ClusterId": "employees-api",
        "CorsPolicy": "default",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/api/employees/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-api": {
        "Destinations": {
          "destination1": {
            "Address": "http://identity-service:5001"
          }
        }
      },
      "employees-api": {
        "Destinations": {
          "destination1": {
            "Address": "http://employees-service:5002"
          }
        }
      }
    }
  }
}
